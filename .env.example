# Server
PORT=5000
NODE_ENV=development

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Encryption key for database credentials (32 bytes hex)
ENCRYPTION_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef

# App Database (SQLite used by default - no config needed)
# To use PostgreSQL for the app DB, uncomment below:
# APP_DB_DIALECT=postgres
# APP_DB_HOST=localhost
# APP_DB_PORT=5432
# APP_DB_NAME=insightdb
# APP_DB_USER=postgres
# APP_DB_PASSWORD=postgres

# AI Chat (optional - for OpenAI integration)
# OPENAI_API_KEY=sk-...
