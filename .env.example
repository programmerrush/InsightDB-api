# Server
PORT=5000
NODE_ENV=development

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Encryption key for database credentials (32 bytes hex)
ENCRYPTION_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef

# App Database
# For Vercel / cloud deployment, use DATABASE_URL:
# DATABASE_URL=postgresql://user:password@host/dbname?sslmode=require
#
# For local PostgreSQL (without connection string):
# APP_DB_DIALECT=postgres
# APP_DB_HOST=localhost
# APP_DB_PORT=5432
# APP_DB_NAME=insightdb
# APP_DB_USER=postgres
# APP_DB_PASSWORD=postgres
#
# If neither is set, SQLite is used (local dev only)

# AI Chat - Gemini
# GEMINI_API_KEY=your-gemini-api-key

GEMINI_API_KEY=abc

# Neon PostgreSQL
DATABASE_URL=postgresql://